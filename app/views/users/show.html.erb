<h3><%= @user.email %>'s Page</h3>
<h2>To Do List </h2>
<% @user.items.each do |item| %>
<div id= <%= item.id %>>
<%= link_to "", [@user,item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>
<%= item.name %>-<%=distance_of_time_in_words(Time.now, item.created_at+7.days) %> to complete</br>
</div>
<% end %>
<%= render partial: 'items/form', locals: {user: @user} %>
